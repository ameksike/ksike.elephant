<?xml version="1.0" encoding="utf-8"?>
<tpl>
    <info>
        <name>default</name>
        <type>project</type>
        <category>ksike</category>
        <created>10/15/2011</created>
        <author>Nosinc</author>
        <description>Ksike projects allow you to make the simpliest projects of a particular solution category. It is the resource that allow the inheritance of new project's type defined by the user</description>
    </info>    
    <data>
        <asociations>
            <app>default</app>
            <app>AjaxMotor</app>
            <app>ExtJS</app>
            <app>MobileApplet</app>
            <app>MobilePlatform</app>
            <app>Unity3D</app>
            <app>WebApp</app>
            <app>WebService</app>
        </asociations>
        <ref>
            <name>core</name>
            <val>{$GLOBALS['core']}</val>
        </ref>
        <ref>
            <name>author</name>
            <val>{$GLOBALS['vars']->author}</val>
        </ref>
        <ref>
            <name>org</name>
            <val>{$GLOBALS['vars']->org}</val>
        </ref>
        <ref>
            <name>project</name>
            <val>{$GLOBALS['name']}</val>
        </ref>
        <ref>
            <name>template</name>
            <val>
                <name>name</name>
                <val>{$GLOBALS['tpl']}</val>
            </val>
            <val>
                <name>path</name>
                <val>{$GLOBALS['tplPath']}</val>
            </val>
        </ref>
        <child>
            <name>app</name>
            <required>true</required>
            <editable>true</editable>
            <description>app directory its a beauty</description>
            <child>
		<name>js</name>
		<required>false</required>
		<editable>true</editable>            
		<description>js blabla bla JavaScript</description>
		<child>
		    	<name>common</name>
			<required>false</required>
			<editable>true</editable>            
			<description>common dir its for...</description>
		</child>
		<child>
		    	<name>views</name>
			<required>false</required>
			<editable>true</editable>            
			<description>views dir its for...</description>
		</child>
     		<child>
		    	<name>controller</name>
			<required>false</required>
			<editable>true</editable>            
			<description>controller dir its for...</description>
		</child>
	    </child>
	    <child>
		<name>css</name>
		<required>false</required>
		<editable>true</editable>            
		<description>css directory its a Cascade Style Sheet</description>		
	    </child>
            <child>
		<name>img</name>
		<required>false</required>
		<editable>true</editable>            
		<description>css directory its for keep the images of the project</description>		
	    </child>
        </child>
        <child>
            <name>core</name>
            <required>true</required>
            <editable>false</editable>
            <description>Uhhjuu, the most important child into the entire project!!!</description>
        </child>
        <child>
            <name>lib</name>
            <required>false</required>
            <editable>true</editable>
            <description>The lib childectory its for been an organized kid</description>
        </child>
        <child>
            <name>plugins</name>
            <required>true</required>
            <editable>false</editable>
            <description></description>
        </child>
        <child>
            <name>tools</name>
            <required>false</required>
            <editable>true</editable>
            <description></description>
        </child>
        <dep>
            <name>ksike</name>
            <type>core</type>
            <version>1.1</version>
            <required>true</required>
        </dep>
        <dep>
            <name>other</name>
            <type>core</type>
            <version>2.0</version>
            <required>true</required>
        </dep>
        <gui>
            <type>panel</type>
            <layout>card</layout>
            <items>
                <type>panel</type>
                <layout>form</layout>
                <items>
                    <author>
                        <type>textfield</type>
                        <label>Author</label>
                        <value>Mr. Nosinc</value>
                    </author>
                    <org>
                        <type>textfield</type>
                        <label>Organization</label>
                        <value>Nosinc</value>
                    </org>
                </items>
            </items>			
        </gui>
    </data>
</tpl>