<?xml version="1.0" encoding="utf-8"?>
<tpl>
	<info>
		<name>MobileApplet</name>
		<type>app</type>
		<category>ksike</category>
		<created>10/15/2011</created>
		<image>false</image>
		<author>Nosinc</author>
		<description>MobileApplet application allow you to build almost everything about cell technology</description>
	</info>
	<references>
		<form>
			<name>$GLOBALS['vars']->formName}</name>
			<height>$GLOBALS['vars']->formHeight}</height>
			<width>$GLOBALS['vars']->formWidth}</width>
		</form>
		<app>
			<name>{$GLOBALS['name']}</name>
		</app>
		<template>
			<name>{$GLOBALS['tpl']}</name>
			<path>{$GLOBALS['tplPath']}</path>
		</template>
	</references>
	<vars>
		<asociations>			
		</asociations>
		<directories>
			<client>
				<required>true</required>
				<editable>true</editable>
				<children>
					<child>js</child>
					<child>resources</child>
				</children>
			</client>
			<server>
				<required>true</required>
				<editable>false</editable>
				<children></children>
			</server>
			<log>
				<required>false</required>
				<editable>true</editable>
				<children></children>
			</log>
			<cfg>
				<required>true</required>
				<editable>false</editable>
				<children></children>
			</cfg>
		</directories>
		<dependencies>
			<core>
				<name>ExtJS</name>
				<version>3.0</version>
				<required>true</required>
			</core>
		</dependencies>
		<gui>
			<type>panel</type>
			<layout>card</layout>
			<items>
				<type>panel</type>
				<layout>form</layout>
				<items>
					<name>
						<type>textfield</type>
						<label>Name</label>
						<value>FormPanel1</value>
					</name>
					<height>
						<type>textfield</type>
						<label>Height</label>
						<value>300</value>
					</height>
					<width>
						<type>textfield</type>
						<label>Width</label>
						<value>400</value>
					</width>
				</items>
			</items>			
		</gui>
	</vars>
</tpl>
